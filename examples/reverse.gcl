// This returns a copy of an array `a`, but in reverse order.
pre { (0 <= #a) && (#a = #b) }
reverse(a:[]int | b:[]int) {
  var i:int {
      i := 0 ;
      while i < #a do {
        b[(#a-1)-i] := a[i];
        i := i + 1
      }
  }
}
post { forall i :: ((0<=i) && (i<#a)) ==> (a[i] = b[(#a-1)-i]) }
