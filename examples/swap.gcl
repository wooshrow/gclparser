// Given a non-empty array `a`, and two indices `i` and `j`, this 
// program swaps the content of `a[i]` and `a[j]`.

pre { (0<#a) && (0<=i) && (i<#a) && (0<=j) && (j<#a) }
swap(i:int, j:int, a:[]int | out:[]int) {
  out := a ;
  var tmp:int {
      tmp    := out[i] ;
      out[i] := out[j] ;
      out[j] := tmp
  }
}
post { (out[i] = a[j]) && (out[j] = a[i]) }
